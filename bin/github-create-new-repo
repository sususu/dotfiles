#!/bin/sh
PROJECT_NAME="$1"
[ -z "$PROJECT_NAME" ] && echo "PROJECT_NAME required" && exit 1
[ -z "$GITHUB_PERSONAL_ACCESS_TOKEN" ] && echo "GITHUB_PERSONAL_ACCESS_TOKEN required" && exit 1

curl -v -X POST -H "Authorization: bearer $GITHUB_PERSONAL_ACCESS_TOKEN" -d "{\"name\":\"$PROJECT_NAME\"}" "https://api.github.com/user/repos"
