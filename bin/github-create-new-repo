#!/bin/bash -e
PROJECT_NAME="$1"
[[ -z "$PROJECT_NAME" || -z "$GITHUB_PERSONAL_ACCESS_TOKEN" ]] && cat <<EOS >&2 && exit 1
$0 [PROJECT_NAME] [GITHUB_PERSONAL_ACCESS_TOKEN]
EOS

curl -v -X POST -H "Authorization: bearer $GITHUB_PERSONAL_ACCESS_TOKEN" -d "{\"name\":\"$PROJECT_NAME\"}" "https://api.github.com/user/repos"
