snippet class
alias   cls
options head
  class ${1:name} {
    ${0:TARGET}
  }

snippet class-extends
alias   cx
options head
  class ${1:name} extends ${2:base} {
    ${0:TARGET}
  }

snippet import
alias   im
options head
  import ${1:name} from '${2:module}';
  ${0:TARGET}

snippet import-node-module
alias   imm
options head
  import ${1:name} from '$1';
  ${0:TARGET}

snippet import-only
alias   imo
options head
  import {${1:name}} from '${2:module}';
  ${0:TARGET}

snippet import-as
alias   ima
options head
  import ${1:name} as ${2:as} from '${3:module}';
  ${0:TARGET}

snippet export
alias   x
options head
  export ${1:name};
  ${0:TARGET}

snippet export-default
alias   xd
options head
  export default ${1:name};
  ${0:TARGET}

snippet export-only
alias   xo
options head
  export {${1:names}};
  ${0:TARGET}

snippet export-default-class-extends
alias   xdcx
options head
  export default class ${1:name} extends ${2:base} {
    ${0:TARGET}
  }

snippet export-default-function
alias   xdfn
options head
  export default function ${1:name}(${2:#:arguments}) {
    ${0:TARGET}
  }

snippet export-function
alias   xfn
options head
  export function ${1:name}(${2:#:arguments}) {
    ${0:TARGET}
  }

snippet export-constant
alias   ecn
options head
