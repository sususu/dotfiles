snippet const
alias   cn
options head
  const ${1:name} = ${2:value};
  ${0:TARGET}

snippet let
options head
  let ${1:name} = ${2:value};
  ${0:TARGET}

snippet var
options head
  var ${1:name} = ${2:value};
  ${0:TARGET}

snippet use-strict
alias   us
options head
  'use strict';
  ${0:TARGET}

snippet named-function
alias   fn
options word
  function ${1:function_name}(${2:#:arguments}) {
    ${0:TARGET}
  }

snippet anonymous-function
alias   f
options word
  function(${1:#:arguments}) { ${0:TARGET} }

snippet if
options head
  if (${1:true}) {
    ${0:TARGET}
  }

snippet if-else
alias   ife
options head
  if (${1:condition}) {
    ${0:TARGET}
  }
  else {
  }

snippet for
options head
  for (let ${1:i}=0; $1 < ${2:collection}.length; $1 += 1) {
    ${0:TARGET}
  }

snippet while
options head
  while (${1:true}) {
    ${0:TARGET}
  }

snippet switch
alias   sw
options head
  switch (${1:var}) {
    ${0:TARGET}
  }

snippet case
options head
  case ${1:value}:
    ${0:TARGET}
    break;

snippet console-log
alias   cl
options head
  console.log(${0:TARGET});

snippet console-trace
alias   ct
options head
  console.trace(${0:TARGET});

snippet console-error
alias   ce
options head
  console.log(${0:TARGET});

snippet console-warn
alias   cw
options head
  console.warn(${0:TARGET});

snippet console-info
alias   ci
options head
  console.info(${0:TARGET});

snippet iife
options head
  (function(${1:#:arguments}) {
    ${0:TARGET}
  })(${2});

